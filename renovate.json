{
  "extends": [
    "config:base"
  ],

  "dependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },
  "devDependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },

  "digest": {
    "enabled": false
  },

  "labels": [
    "renovate"
  ],

  "packageRules": [
      {
        "packagePatterns": ["^eslint"],
        "groupName": "eslint packages"
      },
      {
        "matchPackageNames": ["Django"],
        "allowedVersions": "/(^3\\.2\\.[0-9]+$)|(^4\\.2\\.[0-9]+$)|(^5\\.2\\.[0-9]+$)/"
      },
      {
        "matchPackageNames": ["elasticsearch"],
        "allowedVersions": "=7"
      },
      {
        "matchPackageNames": ["wagtail"],
        "allowedVersions": "=4.1"
      }
    ],

  "pip_requirements": {
    "fileMatch": ["^requirements/.*\\.txt$"]
  }
}
